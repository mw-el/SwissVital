{
    "id": "form-sportler-survey",
    "title": "Athlete Questionnaire",
    "form_type": "sportler-survey",
    "steps": [
      "common/fragebogen_step_one_personal_info_en",
      {
        "id": "step2",
        "title": "Step 2 of 3: Physical Activity",
        "fields": [
          {
            "name": "sport_frequency",
            "type": "radio",
            "label": "1. How often do you engage in sports?",
            "options": [
              {"value": "Täglich", "label": "Daily"},
              {"value": "Mehrmals pro Woche", "label": "Multiple times per week"},
              {"value": "Einmal pro Woche", "label": "Once per week"},
              {"value": "Gelegentlich", "label": "Occasionally"},
              {"value": "Selten bis nie", "label": "Rarely or never"}
            ]
          },
          {
            "name": "sportarten[]",
            "type": "checkbox",
            "label": "2. What type of sports do you mainly practice? (Multiple selections possible)",
            "options": [
              {"value": "Kraftsport", "label": "Strength training"},
              {"value": "Ausdauersport", "label": "Endurance sports"},
              {"value": "Teamsport", "label": "Team sports"},
              {"value": "Extremsport", "label": "Extreme sports"},
              {"value": "Verschiedene", "label": "Various"}
            ]
          },
          {
            "name": "recent_injuries",
            "type": "radio",
            "label": "3. Have you suffered any injuries in the last 12 months?",
            "options": [
              {"value": "Ja, schwere Verletzung (z. B. Bänderriss)", "label": "Yes, severe injury (e.g., ligament tear)"},
              {"value": "Ja, mittelschwere Verletzung (z. B. Zerrung)", "label": "Yes, moderate injury (e.g., strain)"},
              {"value": "Ja, leichte Beschwerden (z. B. Muskelkater)", "label": "Yes, minor issues (e.g., muscle soreness)"},
              {"value": "Nein", "label": "No"}
            ]
          },
          {
            "name": "fruehere_verletzungen[]",
            "type": "checkbox",
            "label": "4. Previous injuries or overuse damage (Multiple selections possible)",
            "options": [
              {"value": "Knochenbrüche / Gelenkverletzungen", "label": "Bone fractures / joint injuries"},
              {"value": "Muskel- / Sehnenverletzungen", "label": "Muscle / tendon injuries"},
              {"value": "Chronische Überlastungsbeschwerden", "label": "Chronic overuse conditions"},
              {"value": "Andere sportbedingte Probleme", "label": "Other sports-related problems"}
            ]
          },
          {
            "name": "koerperregionen[]",
            "type": "checkbox",
            "label": "5. Which body region do you strain the most? (Multiple selections possible)",
            "options": [
              {"value": "Rücken", "label": "Back"},
              {"value": "Knie / Gelenke", "label": "Knees / joints"},
              {"value": "Schultern / Arme", "label": "Shoulders / arms"},
              {"value": "Muskulatur allgemein", "label": "Muscles in general"},
              {"value": "Ganzer Körper", "label": "Whole body"}
            ]
          },
          {
            "name": "pain_after_sport",
            "type": "radio",
            "label": "6. Do you experience persistent pain after sports?",
            "options": [
              {"value": "Ja, regelmässig", "label": "Yes, regularly"},
              {"value": "Gelegentlich", "label": "Occasionally"},
              {"value": "Nur nach intensiven Einheiten", "label": "Only after intensive sessions"},
              {"value": "Selten bis nie", "label": "Rarely or never"},
              {"value": "Keine Schmerzen", "label": "No pain"}
            ]
          },
          {
            "name": "freitext",
            "type": "textarea",
            "label": "Free text – Is there anything else you would like to tell us?",
            "required": false,
            "height": 150
          }
        ]
      },
      "common/fragebogen_step_three_contact_and_submit_en"
    ]
  }