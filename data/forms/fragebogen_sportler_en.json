{
    "id": "form-sportler-survey",
    "title": "Athlete Questionnaire",
    "form_type": "sportler-survey",
    "steps": [
      "common/fragebogen_step_one_personal_info_en",
      {
        "id": "step2",
        "title": "Step 2 of 3: Athletic Activity",
        "fields": [
          {
            "name": "sport_frequency",
            "type": "radio",
            "label": "1. How often do you exercise?",
            "options": [
              {"value": "Daily", "label": "Daily"},
              {"value": "Several times per week", "label": "Several times per week"},
              {"value": "Once per week", "label": "Once per week"},
              {"value": "Occasionally", "label": "Occasionally"},
              {"value": "Rarely to never", "label": "Rarely to never"}
            ]
          },
          {
            "name": "sportarten[]",
            "type": "checkbox",
            "label": "2. Which type of sport do you primarily participate in? (Multiple selection possible)",
            "options": [
              {"value": "Strength training", "label": "Strength training"},
              {"value": "Endurance sports", "label": "Endurance sports"},
              {"value": "Team sports", "label": "Team sports"},
              {"value": "Extreme sports", "label": "Extreme sports"},
              {"value": "Various", "label": "Various"}
            ]
          },
          {
            "name": "recent_injuries",
            "type": "radio",
            "label": "3. Have you suffered any injuries in the past 12 months?",
            "options": [
              {"value": "Yes, severe injury (e.g., ligament tear)", "label": "Yes, severe injury (e.g., ligament tear)"},
              {"value": "Yes, moderate injury (e.g., strain)", "label": "Yes, moderate injury (e.g., strain)"},
              {"value": "Yes, minor discomfort (e.g., muscle soreness)", "label": "Yes, minor discomfort (e.g., muscle soreness)"},
              {"value": "No", "label": "No"}
            ]
          },
          {
            "name": "fruehere_verletzungen[]",
            "type": "checkbox",
            "label": "4. Previous injuries or overuse damage (Multiple selection possible)",
            "options": [
              {"value": "Fractures / Joint injuries", "label": "Fractures / Joint injuries"},
              {"value": "Muscle / Tendon injuries", "label": "Muscle / Tendon injuries"},
              {"value": "Chronic overuse issues", "label": "Chronic overuse issues"},
              {"value": "Other sports-related problems", "label": "Other sports-related problems"}
            ]
          },
          {
            "name": "koerperregionen[]",
            "type": "checkbox",
            "label": "5. Which body region do you strain the most? (Multiple selection possible)",
            "options": [
              {"value": "Back", "label": "Back"},
              {"value": "Knees / Joints", "label": "Knees / Joints"},
              {"value": "Shoulders / Arms", "label": "Shoulders / Arms"},
              {"value": "Musculature in general", "label": "Musculature in general"},
              {"value": "Whole body", "label": "Whole body"}
            ]
          },
          {
            "name": "pain_after_sport",
            "type": "radio",
            "label": "6. Do you have persistent pain after exercise?",
            "options": [
              {"value": "Yes, regularly", "label": "Yes, regularly"},
              {"value": "Occasionally", "label": "Occasionally"},
              {"value": "Only after intensive sessions", "label": "Only after intensive sessions"},
              {"value": "Rarely to never", "label": "Rarely to never"},
              {"value": "No pain", "label": "No pain"}
            ]
          },
          {
            "name": "freitext",
            "type": "textarea",
            "label": "Free text â€“ What else would you like to tell us?",
            "required": false,
            "height": 150
          }
        ]
      },
      "common/fragebogen_step_three_contact_and_submit_en"
    ]
  }